<% if @name %>
  <h1>Hello <%= @name %></h1>
<% end %>

<% if @message %>
  <p><%= @message %></p>
<% end %>

<form action="/monstas" method="post">
  <input type="text" name="name" value="<%= @name %>">
  <input type="submit" value="Change name!">
</form>

<ul>
  <% @names.each do |name| %>
    <li><%= name %></li>
  <% end %>
</ul>